<p id="notice"><%= notice %></p>

<div class="container">
<h1>Animais Disponiveis</h1>

<%= button_to "Novo", new_animal_path, :class => "btn btn-success", :method => :get  %>

<br/>
<br/>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Descricao</th>
      <th>Tipo</th>
      <th>Contato</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.age %></td>
        <td><%= animal.description %></td>
        <td><%= animal.family.upcase %></td>
        <td><%= animal.contact %></td>
        <td><%= image_tag(animal.image.url(:thumb)) %></td>
        <td><%= link_to 'Exibir', animal, class:"btn btn-info btn-xs" %></td>
        <td><%= link_to 'Editar', edit_animal_path(animal), class:"btn btn-primary btn-xs"%></td>
        <td><%= link_to 'Excluir', animal, class:"btn btn-danger btn-xs", method: :delete, data: { confirm: 'Confirma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>



