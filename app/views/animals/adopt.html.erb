<div class="container">
<%= form_for(@adopter) do |f| %>
  <% if @adopter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@adopter.errors.count, "error") %> prohibited this animal from being adopted:</h2>

      <ul>
      <% @adopter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>     

  <div class="field">
    <%= f.label 'Nome:' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'RG:' %><br>
    <%= f.text_field :rg %>
  </div>
    <div class="field">
    <%= f.label 'CPF:' %><br>
    <%= f.text_field :cpf %>
  </div>
  </div>
    <div class="field">
    <%= f.label 'Telefones:' %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label 'Unidade de Tempo:' %><br>
    <%= f.select :ageunit, Animal.ageunits.keys %>
  </div>
  <div class="field">
    <%= f.label 'Descricao:' %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label 'Tipo:' %><br>
    <%= f.select :family, Animal.families.keys %>
  </div>
  <div class="field">
    <%= f.label 'Contato:' %><br>
    <%= f.text_area :contact %>
  </div>
  <div class="field" id="imageInput">
    <%= f.label 'Foto:' %><br>
    <%= f.file_field :image %>
  </div>
    <div class="field">
    <%= f.label 'Adotado?:' %> <br />
    <%= f.check_box :adopted %> <br />
  </div>
  <div class="actions">
    <%= f.submit :Salvar, class: 'btn btn-success'%>
  </div>
<% end %>
</div>