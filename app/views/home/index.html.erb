<div class="container">
<h1>Animais Disponiveis</h1>

<%= form_tag(root_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Buscar..." %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
<% end %>

<br/>
<br/>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Idade</th>
      <th>Descricao</th>     
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.family.upcase %></td>
        <td><%= animal.age %></td>
        <td><%= animal.description %></td>
        <td><%= image_tag(animal.image.url(:thumb)) %></td>
        <td><%= link_to 'Detalhe', show_path(animal.id), class:"btn btn-info btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>



